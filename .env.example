# KWIQ Environment Configuration
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# Application Configuration
KWIQ_PORT=3000
NODE_ENV=development

# Public Branding Configuration (Self-Hosting Friendly)
# These variables are exposed to the client and allow easy rebranding
PUBLIC_KWIQ_APP_NAME=KWIQ
PUBLIC_KWIQ_LOGO_URL=/logo.svg
PUBLIC_KWIQ_LOGO_ALT=KWIQ logo
PUBLIC_KWIQ_PRIMARY_COLOR=#3B82F6
PUBLIC_KWIQ_GRADIENT_FROM=#111827
PUBLIC_KWIQ_GRADIENT_TO=#020817

